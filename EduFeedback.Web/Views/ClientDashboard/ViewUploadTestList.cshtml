@model EduFeedback.Service.ServiceModels.TestAssignmentFilterModel
@using System.Web.Optimization;
@{
    ViewBag.Title = "View Uploads";
}

<link href="~/Content/Datepicker/css/bootstrap-datepicker.css" rel="stylesheet" />
<link href="~/ndesign/assets/vendor/simple-datatables/style.css" rel="stylesheet">
<link href="~/Content/DataTables/datatables.css" rel="stylesheet" />


<div class="pagetitle">
    <h4>View Uploads</h4>
    @*<nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">AssignmentList</li>
            </ol>
        </nav>*@
</div>
<section class="section profile">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body  profile-overview">
                    <div class="form-group">
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="col-form-label">Choose Service Name<span class="mandatory-astrick">*</span></label>


                                <select id="service-dropdown" class="form-control" onchange="onServiceChange()" style="color: red">
                                    <option value="">Select Service</option>
                                </select>

                            </div>
                            <div class="col-md-4">
                                <label class="col-form-label">Uploaded Date<span class="mandatory-astrick">*</span></label>
                                <div class="col-sm-10">
                                    @Html.DropDownListFor(model => model.SearchDate, new SelectList(Model.ExamDateList, "Value", "Text"), null, new { @class = "form-control", id = "ExamDate" })
                                    <span id="ExamDateSpan" style="color:red; display:none;">Please select date.</span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="col-sm-10">
                                    <label class="col-form-label">.</label>
                                    <button type="button" id="btnSearchExam" class="btn  btn-success form-control">Search By Date</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="table-responsive">
                            <table id="ExamAssignmentList" class="display table table-bordered table-striped" width="100%"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<link href="~/Content/Datepicker/css/bootstrap-datepicker.css" rel="stylesheet" />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/Datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/Bundle/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Bundle/js/Module/ClientDashboard-UploadTestList.js"></script>

}